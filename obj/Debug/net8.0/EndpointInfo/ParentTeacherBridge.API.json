  "components": {
    "schemas": {
      "Admin": {
        "type": "object",
        "properties": {
          "adminId": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          },
          "isActive": {
            "type": "boolean",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "AttendanceDto": {
        "type": "object",
        "properties": {
          "attendanceId": {
            "type": "integer",
            "format": "int32"
          },
          "studentId": {
            "type": "integer",
            "format": "int32"
          },
          "classId": {
            "type": "integer",
            "format": "int32"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "status": {
            "type": "string",
            "nullable": true
          },
          "remark": {
            "type": "string",
            "nullable": true
          },
          "markedTime": {
            "type": "string",
            "format": "time",
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreateAttendanceDto": {
        "required": [
          "classId",
          "date",
          "status",
          "studentId"
        ],
        "type": "object",
        "properties": {
          "studentId": {
            "type": "integer",
            "format": "int32"
          },
          "classId": {
            "type": "integer",
            "format": "int32"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "status": {
            "maxLength": 20,
            "minLength": 1,
            "type": "string"
          },
          "remark": {
            "maxLength": 250,
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreateBehaviourDto": {
        "required": [
          "behaviourCategory",
          "description",
          "incidentDate",
          "severity",
          "studentId",
          "teacherId"
        ],
        "type": "object",
        "properties": {
          "behaviourId": {
            "type": "integer",
            "format": "int32"
          },
          "studentId": {
            "type": "integer",
            "format": "int32"
          },
          "teacherId": {
            "type": "integer",
            "format": "int32"
          },
          "incidentDate": {
            "type": "string",
            "format": "date-time"
          },
          "behaviourCategory": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "severity": {
            "minLength": 1,
            "pattern": "^(Severe|Moderate|Minor)$",
            "type": "string"
          },
          "description": {
            "maxLength": 500,
            "minLength": 0,
            "type": "string"
          },
          "notifyParent": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "CreatePerformanceDto": {
        "required": [
          "examType",
          "marksObtained",
          "maxMarks",
          "studentId",
          "subjectId",
          "teacherId"
        ],
        "type": "object",
        "properties": {
          "performanceId": {
            "type": "integer",
            "format": "int32"
          },
          "studentId": {
            "type": "integer",
            "format": "int32"
